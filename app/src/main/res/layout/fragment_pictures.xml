<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PicturesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:elevation="0dp"
        android:orientation="vertical">

        <include layout="@layout/datepicker"></include>



        <!--Start Crisis Picture Components-->
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            android:layout_marginTop="12dp"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Photo du début"
                        android:textColor="@color/colorDark"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/colorSecondaryDark"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:id="@+id/start_picture_taken_linearlayout"
                        android:layout_height="120dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/start_picture_imageview"
                            android:clickable="true"
                            android:scaleType="centerCrop"
                            android:layout_width="110dp"
                            android:layout_height="70dp" />
                        <ImageView
                            android:id="@+id/start_picture_imageview_thermo"
                            android:clickable="true"
                            android:layout_width="70dp"
                            android:scaleType="centerCrop"
                            android:layout_height="110dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textview_crise_title_start"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:text="Photo prise à "
                                android:textColor="@color/colorTextGray"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/start_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:textColor="@color/colorTextGray"
                                android:textSize="14dp" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <Button
                                android:id="@+id/update_pictures_start_button"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_edit_black_24dp" />

                            <Button
                                android:layout_marginLeft="20dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_thermo_24dp"
                                android:id="@+id/thermal_start_button"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/colorSecondaryDark"
                        android:gravity="center"
                        android:clickable="true"

                        android:id="@+id/start_picture_linearlayout"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/add_picture_start_button"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/ic_add_a_photo_black_24dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:text="Prendre une photo"
                            android:textColor="@color/colorTextGray"
                            android:textSize="14dp" />
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--End Crisis Picture Components-->
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            android:layout_marginTop="12dp"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Photo de la fin"
                        android:textColor="@color/colorDark"
                        android:textSize="16dp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorSecondaryDark"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:id="@+id/end_picture_taken_linearlayout"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/end_picture_imageview"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:layout_width="110dp"
                        android:layout_height="70dp" />
                    <ImageView
                        android:id="@+id/end_picture_imageview_thermo"
                        android:clickable="true"
                        android:layout_width="70dp"
                        android:scaleType="centerCrop"
                        android:layout_height="110dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textview_crise_title_end"
                        android:layout_height="20dp"
                        android:text="Photo prise à "

                        android:textColor="@color/colorTextGray"
                        android:textSize="14dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/end_textView"
                        android:text=""
                        android:textColor="@color/colorTextGray"
                        android:textSize="14dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_edit_black_24dp"
                            android:id="@+id/update_pictures_end_button"/>
                        <Button
                            android:layout_marginLeft="20dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_thermo_24dp"
                            android:id="@+id/thermal_end_button"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/colorSecondaryDark"
                    android:gravity="center"
                    android:clickable="true"
                    android:id ="@+id/end_picture_linearlayout"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_add_crisis"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:clickable="false"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/ic_add_a_photo_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:text="Prendre une photo"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin_horizontal"
            android:layout_marginRight="@dimen/card_margin_horizontal"
            android:layout_marginTop="12dp"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="Douleur"
                        android:layout_marginTop="10dp"
                        android:id="@+id/pain_textview"
                        android:textColor="@color/colorDark"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_rcs_layout"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/colorSecondaryDark"
                    android:clickable="true"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:clickable="false"

                        android:text="A quel degré estimez-vous aujourd'hui la douleur ?"
                        android:textColor="@color/colorTextGray"
                        android:textSize="12dp" />

                    <SeekBar
                        android:id="@+id/seekBar_crisis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="10"
                        android:progress="5"
                        android:progressTint="@color/colorPrimary"
                        android:thumbTint="@color/colorPrimary"
                        android:tickMark="@drawable/tickmark" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</FrameLayout>